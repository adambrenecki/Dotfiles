call pathogen#infect()

" Remap navigation keys to their Vim equivalents
noremap t gj
noremap n gk
noremap T j
noremap N k
noremap s l
noremap H 0
noremap S $
" make keys easier to reach
inoremap hh <Esc>
noremap ; :
" make nerdtree behave
let NERDTreeMapOpenInTab='T'

if has("gui_running")
	" gui settings
	set guifont=Source_Code_Pro:h13
	set lines=30 columns=100
end

color Tomorrow

" Show command area and cursor position, line nums
"set showcommand
set ruler
set number

" Forget compatibility with Vi. Who cares.  
set nocompatible  
  
" Enable filetypes  
filetype on  
filetype plugin on  
filetype indent on  
syntax on
" indentation with tabstops at 4
set smartindent
set autoindent
set tabstop=4

" Remap keys inside netrw
" see http://unix.stackexchange.com/questions/31575/remapping-keys-in-vims-directory-view
augroup netrw_dvorak_fix
    autocmd!
    autocmd filetype netrw call Fix_netrw_maps_for_dvorak()
augroup END
function! Fix_netrw_maps_for_dvorak()
	noremap <buffer> t j
	noremap <buffer> n k
	noremap <buffer> s l
endfunction

" Wrap on words, not chars
" see http://vim.wikia.com/wiki/Word_wrap_without_line_breaks
set wrap
set linebreak
set nolist
set textwidth=0
set wrapmargin=0
